<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.codingblock.learnfragment.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/out_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/out_card" />

        <Button
            android:id="@+id/hard"
            android:layout_width="prompt"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/prompt" />
        
        <Button
            android:id="@+id/off_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/off_card" />
        
        
    </LinearLayout>

</LinearLayout>